<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/sent_message_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sent_message_backround"
        android:maxWidth="224dp"
        android:padding="15dp"
        android:visibility="gone"
        android:textColor="@color/black"
        android:layout_marginBottom="7dp"
        android:fontFamily="@font/zen_old_mincho"
        android:layout_marginTop="7dp"
        android:layout_marginStart="7dp"/>

    <TextView
        android:id="@+id/failed_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/message_failed_text"
        android:layout_below="@+id/sent_message_custom"
        android:layout_alignStart="@+id/sent_message_custom"
        android:drawableLeft="@drawable/failed_sent"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginStart="15dp"
        android:textColor="@color/red"
        android:layout_marginTop="3dp"
        />
    <TextView
        android:id="@+id/recieved_message_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/recieved_message_backround"
        android:maxWidth="224dp"
        android:fontFamily="@font/zen_old_mincho"
        android:padding="15dp"
        android:textColor="@color/black"
        android:visibility="gone"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="7dp"/>


</RelativeLayout>